@model IEnumerable<DomainViewModel>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <h1 class="display-4 mb-5">Dashboard</h1>
    <div class="row">
        <div class="col-md-8">
            <h2 class="mb-4">Domains</h2>
            @if (Model.Count() == 0)
            {
                <p>No domains found.</p>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Domain Name</th>
                            <th>App Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var domain in Model)
                        {
                            <tr>
                                <td>@domain.Name</td>
                                <td>@(domain.IsRunning ? "Running" : "Stopped")</td>
                                <td>
                                    <button class="btn btn-primary btn-sm" onclick="startApp('@domain.Name')">Start</button>
                                    <button class="btn btn-danger btn-sm" onclick="stopApp('@domain.Name')">Stop</button>
                                    <button class="btn btn-info btn-sm" onclick="redeployApp('@domain.Name')">Redeploy</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

